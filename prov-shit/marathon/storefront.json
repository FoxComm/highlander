{
    "id": "/storefront",
    "cmd": null,
    "cpus": 1,
    "mem": 500,
    "disk": 0,
    "instances": 1,
    "container": {
        "type": "DOCKER",
        "volumes": [ ],
        "docker": {
            "image": "docker.foxcommerce.com:5000/storefront",
            "network": "HOST",
            "privileged": true,
            "parameters": [ ],
            "forcePullImage": true
        }
    },
    "env": {
        "NODE_TLS_REJECT_UNAUTHORIZED": "0",
        "API_URL": "http://balancer.service.consul",
        "LISTEN_PORT": "8080",
        "NODE_ENV": "production",
        "FIREBRAND_LANGUAGE": "en",
        "PHOENIX_PUBLIC_KEY": "/storefront/public_key.pem",
        "STRIPE_PUBLISHABLE_KEY": "FILL_ME_IN"
    },
    "healthChecks": [
        {
            "protocol": "COMMAND",
            "command": {
                "value": "curl http://$HOST:8080/"
            },
            "gracePeriodSeconds": 60,
            "intervalSeconds": 60,
            "timeoutSeconds": 20,
            "maxConsecutiveFailures": 3,
            "ignoreHttp1xx": false
        }
    ],
    "portDefinitions": [
        {
            "port": 10000,
            "protocol": "tcp",
            "name": "8080",
            "labels": { }
        }
    ]
}
