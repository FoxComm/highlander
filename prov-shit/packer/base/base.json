{
    "builders" : [
        {
            "name": "google",            
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_ubuntu_image`}}",
            "network": "{{user `network`}}",
            "zone": "us-central1-a",
            "image_name": "base-{{timestamp}}",
            "image_description": "Base image used for provisioning",
            "instance_name": "packer-base-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["no-ip", "packer-base"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}"
        },
        {
            "name": "amazon",            
            "type": "amazon-ebs",
            "source_ami": "{{user `source_ami`}}",
            "instance_type": "{{user `instance_type`}}",
            "region": "{{user `region`}}",
            "ami_name": "base-{{timestamp}}",
            "ami_description": "Base image used for provisioning",
            "associate_public_ip_address": true,
            "ssh_username" : "{{user `ssh_username`}}",
            "vpc_id": "{{user `vpc_id`}}",
            "security_group_id": "{{user `security_group_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "tags": {
                "packer": "base",
                "ip": "none"
            }
        }        
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_base.yml"
        }
    ]
}
