{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_ubuntu_image`}}",
            "network": "{{user `network`}}",
            "zone": "us-central1-a",
            "image_name": "base-{{isotime \"060102-150405\"}}",
            "image_description": "Base United Image",
            "instance_name": "packer-base-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["ssh", "no-ip"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}"
        },
        {
            "name": "amazon",
            "type": "amazon-ebs",
            "source_ami": "{{user `source_ami`}}",
            "instance_type": "{{user `instance_type`}}",
            "region": "{{user `region`}}",
            "ami_name": "base-{{isotime \"060102-150405\"}}",
            "ami_description": "Base United Image",
            "associate_public_ip_address": true,
            "ssh_username" : "{{user `ssh_username`}}",
            "ssh_keypair_name":"{{user `ssh_keypair_name`}}",
            "ssh_private_key_file":"{{user `ssh_private_key_file`}}",
            "vpc_id": "{{user `vpc_id`}}",
            "security_group_id": "{{user `security_group_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "tags": {
                "Name": "base-{{isotime \"060102-150405\"}}"
            }
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_base_united.yml",
            "extra_arguments": ["-vvvv"]
        }
    ]
}
