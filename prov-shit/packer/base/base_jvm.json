{
    "builders" : [
        {
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_mesos`}}",
            "network": "{{user `network`}}",
            "zone": "us-central1-a",
            "image_name": "base-jvm-{{timestamp}}",
            "image_description": "Base JVM image used for provisioning",
            "instance_name": "packer-base-jvm-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["no-ip", "packer-base-jvm"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}"
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_base_jvm.yml"
        }
    ]
}
