{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_image`}}",
            "network": "{{user `network`}}",
            "zone": "us-central1-a",
            "image_name": "base-mesos-{{timestamp}}",
            "image_description": "Base Mesos image used for provisioning",
            "instance_name": "packer-base-mesos-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["no-ip", "packer-base-mesos"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}"
        },
        {
            "name": "amazon",
            "type": "amazon-ebs",
            "source_ami": "{{user `base_ami`}}",
            "instance_type": "{{user `instance_type`}}",
            "region": "{{user `region`}}",
            "ami_name": "base-mesos-{{timestamp}}",
            "ami_description": "Base Mesos image used for provisioning",
            "associate_public_ip_address": true,
            "ssh_username" : "{{user `ssh_username`}}",
            "vpc_id": "{{user `vpc_id`}}",
            "security_group_id": "{{user `security_group_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "ami_block_device_mappings": [{
                "device_name": "/dev/sda1",
                "volume_size": 20,
                "delete_on_termination": true
            }],
            "launch_block_device_mappings": [{
                "device_name": "/dev/sda1",
                "volume_size": 20,
                "delete_on_termination": true
            }],
            "tags": {
                "packer": "base-mesos"
            }
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_base_mesos.yml"
        }
    ]
}
