{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_nano_image`}}",
            "network": "{{user `network`}}",
            "zone": "us-central1-a",
            "image_name": "nanostack-amigo-{{timestamp}}",
            "image_description": "Base Nanostack Amigo Image",
            "instance_name": "packer-nanostack-amigo-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["ssh", "no-ip"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}"
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_nanostack_amigo.yml",
            "extra_arguments": [
                "-vvvv",
                "--extra-vars", "@packer/envs/{{user `project_base`}}/params.json"
            ]
        }
    ]
}
