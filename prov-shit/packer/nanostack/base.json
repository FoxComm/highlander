{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_ubuntu_image`}}",
            "network": "{{user `network`}}",
            "zone": "us-central1-a",
            "image_name": "nanostack-base-{{timestamp}}",
            "image_description": "Base Nanostack Image",
            "instance_name": "packer-nanostack-base-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["ssh", "no-ip"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}"
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_nanostack_base.yml",
            "extra_arguments": ["-vvvv"]
        }
    ]
}
