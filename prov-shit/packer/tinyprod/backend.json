{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_mesos`}}",
            "network": "{{user `network`}}",
            "zone": "{{user `zone`}}",
            "image_name": "{{user `image_prefix`}}-backend-{{timestamp}}",
            "image_description": "{{user `image_title`}} Backend Image",
            "instance_name": "packer-{{user `image_prefix`}}-backend-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["ssh", "no-ip", "{{user `image_prefix`}}", "backend"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}",
            "disk_size": 40
        },
        {
            "name": "amazon",
            "type": "amazon-ebs",
            "source_ami": "{{user `base_united_ami`}}",
            "instance_type": "{{user `instance_type`}}",
            "region": "{{user `region`}}",
            "ami_name": "backend-{{isotime \"060102-150405\"}}",
            "ami_description": "Tinyprod Backend Image",
            "associate_public_ip_address": true,
            "ssh_username" : "{{user `ssh_username`}}",
            "ssh_keypair_name":"{{user `ssh_keypair_name`}}",
            "ssh_private_key_file":"{{user `ssh_private_key_file`}}",
            "vpc_id": "{{user `vpc_id`}}",
            "security_group_id": "{{user `security_group_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "tags": {
                "Name": "base-{{isotime \"060102-150405\"}}"
            }
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_tinyprod_backend.yml",
            "extra_arguments": [
                "-vvvv",
                "--extra-vars", "@packer/envs/{{user `project_base`}}/params.json",
                "--extra-vars", "@packer/envs/{{user `project_base`}}/secret_keys.json"
            ]
        }
    ]
}
