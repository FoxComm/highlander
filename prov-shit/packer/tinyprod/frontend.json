{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_mesos`}}",
            "network": "{{user `network`}}",
            "zone": "{{user `zone`}}",
            "image_name": "{{user `image_prefix`}}-frontend-{{timestamp}}",
            "image_description": "{{user `image_title`}} Frontend Image",
            "instance_name": "packer-{{user `image_prefix`}}-frontend-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["ssh", "no-ip", "{{user `image_prefix`}}", "frontend"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}"
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_tinyprod_frontend.yml",
            "extra_arguments": [
                "-vvvv",
                "--extra-vars", "@packer/envs/{{user `project_base`}}/params.json",
                "--extra-vars", "@packer/envs/{{user `project_base`}}/secret_keys.json"
            ]
        }
    ]
}
