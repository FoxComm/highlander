{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_mesos`}}",
            "network": "{{user `network`}}",
            "zone": "us-central1-a",
            "image_name": "stage-amigo-server-{{timestamp}}",
            "image_description": "base image used for provisioning",
            "instance_name": "packer-stage-amigo-server-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["no-ip", "packer-stage-amigo-server"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}",
            "disk_size" : 20
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_amigo_server.yml",
            "extra_arguments": [
                "-vvvv",
                "--extra-vars", "@packer/envs/{{user `stage_variables_file`}}"
            ]
        }
    ]
}
