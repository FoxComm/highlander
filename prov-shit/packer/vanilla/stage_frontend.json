{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_node_image`}}",
            "network": "{{user `network`}}",
            "zone": "{{user `zone`}}",
            "image_name": "{{user `image_prefix`}}-stage-frontend-{{timestamp}}",
            "image_description": "{{user `image_title`}} Frontend Image",
            "instance_name": "packer-{{user `image_prefix`}}-stagef-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["ssh", "no-ip", "{{user `image_prefix`}}", "stage", "frontend"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}",
            "disk_size" : 20
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_stage_frontend.yml",
            "extra_arguments": ["--extra-vars", "@packer/envs/{{user `stage_variables_file`}}"]
        }
    ]
}
