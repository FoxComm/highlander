{
    "builders" : [
        {
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_image`}}",
            "network": "{{user `network`}}",
            "zone": "{{user `zone`}}",
            "image_name": "{{user `image_prefix`}}-kafka-{{timestamp}}",
            "image_description": "{{user `image_title`}} Kafka Image",
            "instance_name": "packer-kafka-{{uuid}}",
            "machine_type": "n1-standard-1",
            "tags": ["ssh", "no-ip", "{{user `image_prefix`}}", "kafka"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}"
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_service_kafka.yml",
            "extra_arguments": ["--extra-vars", "@packer/envs/{{user `variables_file`}}"]
        }
    ]
}
