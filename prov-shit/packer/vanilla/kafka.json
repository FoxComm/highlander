{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_image`}}",
            "network": "{{user `network`}}",
            "zone": "{{user `zone`}}",
            "image_name": "{{user `image_prefix`}}-kafka-{{timestamp}}",
            "image_description": "{{user `image_title`}} Kafka Image",
            "instance_name": "packer-{{user `image_prefix`}}-kafka-{{uuid}}",
            "machine_type": "n1-standard-1",
            "tags": ["ssh", "no-ip", "{{user `image_prefix`}}", "kafka"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}"
        },
        {
            "name": "amazon",
            "type": "amazon-ebs",
            "source_ami": "{{user `base_ami`}}",
            "instance_type": "{{user `instance_type`}}",
            "region": "{{user `region`}}",
            "ami_name": "{{user `image_prefix`}}-kafka-{{timestamp}}",
            "ami_description": "{{user `image_title`}} Kafka Image",
            "associate_public_ip_address": true,
            "ssh_username" : "{{user `ssh_username`}}",
            "vpc_id": "{{user `vpc_id`}}",
            "security_group_id": "{{user `security_group_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "tags": {
                "Name": "vanilla-kafka-{{timestamp}}"
            }
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_service_kafka.yml",
            "extra_arguments": [
                "-vvvv", 
                "--extra-vars", "@packer/envs/{{user `variables_file`}}"
            ]
        }
    ]
}
