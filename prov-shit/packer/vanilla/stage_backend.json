{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_jvm_image`}}",
            "network": "{{user `network`}}",
            "zone": "{{user `zone`}}",
            "image_name": "{{user `image_prefix`}}-stage-backend-{{timestamp}}",
            "image_description": "{{user `image_title`}} Stage Backend Image",
            "instance_name": "packer-{{user `image_prefix`}}-stageb-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["ssh", "no-ip", "{{user `image_prefix`}}", "stage", "backend"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}",
            "disk_size" : 30
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_stage_backend.yml",
            "extra_arguments": ["--extra-vars", "@packer/envs/{{user `stage_variables_file`}}"]
        }
    ]
}
