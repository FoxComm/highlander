{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_node_image`}}",
            "network": "{{user `network`}}",
            "zone": "{{user `zone`}}",
            "image_name": "{{user `image_prefix`}}-front-worker-{{timestamp}}",
            "image_description": "{{user `image_title`}} Front Worker Image",
            "instance_name": "packer-{{user `image_prefix`}}-front-{{uuid}}",
            "machine_type": "n1-standard-1",
            "tags": ["ssh", "no-ip", "{{user `image_prefix`}}", "front"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}",
            "disk_size" : 20
        },
        {
            "name": "amazon",
            "type": "amazon-ebs",
            "source_ami": "{{user `base_node_ami`}}",
            "instance_type": "{{user `instance_type`}}",
            "region": "{{user `region`}}",
            "ami_name": "{{user `image_prefix`}}-front-{{timestamp}}",
            "ami_description": "{{user `image_title`}} Front Worker Image",
            "associate_public_ip_address": true,
            "ssh_username" : "{{user `ssh_username`}}",
            "vpc_id": "{{user `vpc_id`}}",
            "security_group_id": "{{user `security_group_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "ami_block_device_mappings": [{
                "device_name": "/dev/sda1",
                "volume_size": 20,
                "delete_on_termination": true
            }],
            "launch_block_device_mappings": [{
                "device_name": "/dev/sda1",
                "volume_size": 20,
                "delete_on_termination": true
            }],
            "tags": {
                "Name": "{{user `image_prefix`}}-front-worker-{{timestamp}}"
            }
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_service_front.yml",
            "extra_arguments": [
                "-vvvv",
                "--extra-vars", "@packer/envs/{{user `project_base`}}/params.json"
            ]
        }
    ]
}
