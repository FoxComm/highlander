{
  "id": "/orders-consumer",
  "cmd": null,
  "cpus": 0.25,
  "mem": 64,
  "disk": 0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{docker_registry}}:5000/orders-consumer:{{docker_tags.orders-consumer}}",
      "network": "HOST",
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  },
  "env": {
    "TOPIC": "activities",
    "SCHEMA_REPOSITORY_URL": "http://{{schema_server}}",
    "ZOOKEEPER_URL": "{{zookeeper_server}}",
    "HENHOUSE": "{{henhouse_server}}"
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "ps -ef | grep -v grep | grep orders-consumer"
      },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 30,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ]
}
