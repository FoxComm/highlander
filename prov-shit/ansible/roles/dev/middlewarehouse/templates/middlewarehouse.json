{
  "id": "/middlewarehouse",
  "cmd": null,
  "cpus": 0.25,
  "mem": 64,
  "disk": 0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "{{docker_logs_dir}}",
        "hostPath": "{{docker_logs_host_dir}}",
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "{{docker_registry}}:5000/middlewarehouse:{{docker_tags.middlewarehouse}}",
      "network": "HOST",
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  },
  "ports": [{{consul_ports.middlewarehouse}}],
  "env": {
    "PORT": "{{consul_ports.middlewarehouse}}",
    "DB_SSLMODE": "disable",
    "SCHEMA_REGISTRY_URL": "http://{{consul_services.schema_registry}}",
    "DB_NAME": "{{middlewarehouse_db_name}}",
    "PHOENIX_URL": "http://{{consul_services.phoenix}}",
    "ZOOKEEPER_URL": "{{consul_services.zookeeper}}",
    "LOG_LEVEL": "info",
    "DB_HOST": "{{consul_hosts.docker_db}}",
    "KAFKA_BROKER": "{{consul_services.kafka}}",
    "DB_USER": "middlewarehouse"
  },
  "constraints": [["hostname", "UNIQUE"]],
  "healthChecks": [
    {
      "path": "/v1/public/ping",
      "protocol": "HTTP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 30,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false,
      "port": {{consul_ports.middlewarehouse}}
    }
  ]
}
