{
  "id": "/storefront",
  "cmd": null,
  "cpus": 1,
  "mem": 4096,
  "disk": 0,
  "instances": 1,
  "env": {
    "API_URL": "https://{{storefront_server_name}}",
    "NODE_ENV": "production",
    "PORT": "4041",
    "PHOENIX_PUBLIC_KEY": "/keys/public_key.pem",
    "STRIPE_PUBLISHABLE_KEY": "{{stripe_publishable_key}}"
  },
  "portDefinitions": [
    {
      "port": 10008,
      "protocol": "tcp",
      "name": "4041",
      "labels": {}
    }
  ],
  "healthChecks": [
    {
      "path": "/",
      "protocol": "HTTP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false,
      "port": 4041
    }
  ],
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "/keys",
        "hostPath": "{{public_keys_dest_dir}}",
        "mode": "RO"
      }
    ],
    "docker": {
      "image": "{{docker_registry}}:5000/firebrand:{{docker_frontend_branch}}",
      "network": "HOST",
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  }
}
