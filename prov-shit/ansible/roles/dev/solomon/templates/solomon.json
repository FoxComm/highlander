{
  "id": "/solomon",
  "cmd": null,
  "cpus": 0.5,
  "mem": 256,
  "disk": 0,
  "instances": 1,
  "env": {
    "PORT": "4002",
    "DB_USER": "{{db_user}}",
    "DB_HOST": "{{docker_db_host}}",
    "DB_NAME": "{{phoenix_db_name}}",
    "DB_PASSWORD": "",
    "PRIVATE_KEY": "{{private_keys_dest_dir}}/private_key.pem",
    "PUBLIC_KEY": "{{public_keys_dest_dir}}/public_key.pem",
    "TOKEN_TTL": "{{solomon_token_ttl}}"
  },
  "ports": [4002],
  "constraints": [["hostname", "UNIQUE"]],
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "{{private_keys_dest_dir}}",
        "hostPath": "{{private_keys_dest_dir}}",
        "mode": "RO"
      },
      {
        "containerPath": "{{public_keys_dest_dir}}",
        "hostPath": "{{public_keys_dest_dir}}",
        "mode": "RO"
      }
    ],
    "docker": {
      "image": "{{docker_registry}}:5000/solomon:{{docker_branch}}",
      "network": "HOST",
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  },
  "healthChecks": [
    {
      "path": "/ping",
      "protocol": "HTTP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false,
      "portIndex": 0
    }
  ]
}
