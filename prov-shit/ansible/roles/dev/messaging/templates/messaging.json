{
  "id": "/messaging",
  "cmd": null,
  "cpus": 1,
  "mem": 512,
  "disk": 0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "{{docker_logs_dir}}",
        "hostPath": "{{docker_logs_host_dir}}",
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "{{docker_registry}}:5000/messaging:{{docker_tags.messaging}}",
      "network": "HOST",
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  },
  "env": {
    "PHOENIX_USER": "{{phoenix_api_user}}",
    "PHOENIX_PASSWORD": "{{phoenix_api_password}}",
    "PHOENIX_URL": "http://{{consul_services.phoenix}}",
    "API_HOST": "{{consul_hosts.messaging}}",
    "KAFKA_BROKER": "{{consul_services.kafka}}",
    "SCHEMA_REGISTRY_URL": "http://{{consul_services.schema_registry}}",
    "JAVA_OPTS": "-Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port={{consul_ports.messaging_jmx}} -Dcom.sun.management.jmxremote.local.only=false -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false"
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "ps -ef | grep -v grep | grep messaging.jar"
      },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 30,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ]
}
