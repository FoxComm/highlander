{
  "id": "/ashes",
  "cpus": 1,
  "mem": 512,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "{{docker_registry}}/ashes",
      "network": "HOST",
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    },
    "volumes": [
      {
        "containerPath": "/certs",
        "hostPath": "{{public_keys_dest_dir}}",
        "mode": "RO"
      }
    ]
  },
  "env": {
    "NODE_TLS_REJECT_UNAUTHORIZED": "0",
    "API_URL": "{{api_server}}",
    "NODE_ENV": "production",
    "PORT": "4000",
    "PHOENIX_PUBLIC_KEY": "/certs/public_key.pem",
    "GA_TRACKING_ID": "{{ashes_ga_tracking_id}}",
    "STRIPE_PUBLISHABLE_KEY": "{{stripe_publishable_key}}",
    "ON_SERVER": "true"
  },
  "healthChecks": [
    {
      "path": "/admin/login",
      "protocol": "HTTP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false,
      "port": 4000
    }
  ],
  "portDefinitions": [
    {
      "port": 4000,
      "protocol": "tcp",
      "name": "4000",
      "labels": {}
    }
  ]
}