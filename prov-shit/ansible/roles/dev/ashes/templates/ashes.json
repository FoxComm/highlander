{
  "id": "/ashes",
  "cmd": null,
  "cpus": 1,
  "mem": 6144,
  "disk": 0,
  "instances": 1,
  "env": {
    "NODE_ENV": "production",
    "PORT": "4000",
    "PHOENIX_PUBLIC_KEY": "/keys/public_key.pem",
    "ON_SERVER": "true",
    "STRIPE_PUBLISHABLE_KEY": "{{stripe_publishable_key}}",
    "GA_TRACKING_ID": "{{ashes_ga_tracking_id}}"
  },
  "portDefinitions": [
    {
      "port": 10008,
      "protocol": "tcp",
      "name": "4000",
      "labels": {}
    }
  ],
  "healthChecks": [
    {
      "path": "/admin/login",
      "protocol": "HTTP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false,
      "port": 4000
    }
  ],
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "/keys",
        "hostPath": "{{public_keys_dest_dir}}",
        "mode": "RO"
      }
    ],
    "docker": {
      "image": "{{docker_registry}}:5000/ashes:{{docker_frontend_branch}}",
      "network": "HOST",
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  }
}
