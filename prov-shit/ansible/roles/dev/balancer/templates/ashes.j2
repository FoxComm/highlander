upstream ashes {
    server {{ ashes_server }} fail_timeout=10s max_fails=360;
}

server {
  listen 80;
  listen [::]:80;

  server_name {{ashes_server_name}};
  return 301 https://$server_name$request_uri;
}

server {
  listen 443 ssl;
  ssl_certificate     /certs/domain.crt;
  ssl_certificate_key /certs/domain.key;
  keepalive_timeout   70;

  index index.html;

  server_name {{ashes_server_name}};

  # Proxy to ashes
  location / {
      proxy_pass http://ashes;
  }

  location @ashes {
      proxy_pass http://ashes;
  }

  include /etc/nginx/service_locations.conf;
}
