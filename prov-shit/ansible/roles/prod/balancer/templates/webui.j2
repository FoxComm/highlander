upstream storefront {
  server {{storefront_server}} fail_timeout=10s  max_fails=360;
}

upstream ashes {
  server {{ashes_server}} fail_timeout=10s  max_fails=360;
}

server {
  listen 80 default_server;
  listen [::]:80 default_server;

  server_name {{webui_server_name}};
  return 301 https://$server_name$request_uri;
}

server {
  listen 443 ssl;
  ssl_certificate     /certs/domain.crt;
  ssl_certificate_key /certs/domain.key;
  keepalive_timeout   70;

  index index.html;

  server_name {{webui_server_name}};

  # variables
  # language
  set $accept_language en;
  if ($http_accept_language) {
      set $accept_language $http_accept_language;
  }

  # Proxy to ashes
  location /admin/ {
      proxy_pass http://ashes;
  }

  location @ashes {
      proxy_pass http://ashes;
  }

  # Proxy to storefront
  location / {
      proxy_pass http://storefront;
  }

  location @storefront {
      proxy_pass http://storefront;
  }

  include /etc/nginx/service_locations.conf;
}
