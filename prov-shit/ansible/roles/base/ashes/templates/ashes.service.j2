[Service]
WorkingDirectory={{ ashes_install_dir }}
ExecStart=/bin/bash ./run_ashes.sh
Restart=always
RestartSec=5
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=ashes
Environment=NODE_ENV=production
Environment=PHOENIX_PUBLIC_KEY={{ public_keys_dest_dir }}/public_key.pem
Environment=STRIPE_PUBLISHABLE_KEY={{ stripe_publishable_key }}
Environment=ON_SERVER=true

[Install]
WantedBy=multi-user.target
