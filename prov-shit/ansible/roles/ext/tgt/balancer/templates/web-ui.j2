server {
  listen 80 default_server;
  listen [::]:80 default_server;

  server_name {{storefront_server_name}};
  return 301 https://$server_name$request_uri;
}

server {
  listen 443 ssl;
  ssl_certificate     /certs/domain.crt;
  ssl_certificate_key /certs/domain.key;
  keepalive_timeout   70;

  index index.html;

  server_name {{storefront_server_name}};

  # variables
  # language
  set $accept_language {{storefront_default_language}};
  if ($http_accept_language) {
      set $accept_language $http_accept_language;
  }
  {% if storefront_fixed_language %}set $accept_language {{storefront_default_language}};{% endif %}

  # Proxy to the demo search
  location / {
      proxy_pass http://demo-search;
  }

  location @demo-search {
      proxy_pass http://demo-search;
  }

  location ~ /application/public/images/(.*) {
      proxy_pass http://marketplace-ui/application/public/images/$1;
  }

  location ~ /application/public/(.*) {
      proxy_pass http://marketplace-ui/$1;
  }

  location /application/ {
      proxy_pass http://marketplace-ui;
  }

  location @marketplace-ui {
      proxy_pass http://marketplace-ui;
  }

  include /etc/nginx/service_locations.conf;
  include /etc/nginx/tgt_service_locations.conf;
}
