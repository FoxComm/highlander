{
  "type": "fc",
  "fields": [ "id" ],
  "query": [
    {
      "type": "is",
      "in": "slug",
      "value": [ "awesome", "whatever" ]
    },
    {
      "type": "state",
      "value": "all"
    },
    {
      "type": "contains",
      "in": [ "tags" ],
      "value": "gift"
    },
    {
      "type": "matches",
      "in": [ "title", "description" ],
      "value": [ "food", "drink" ]
    },
    {
      "type": "range",
      "in": "price",
      "value": {
        "<": 5000,
        "gte": 1000
      }
    }
  ]
}
