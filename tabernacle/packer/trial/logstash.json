{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_image`}}",
            "network": "{{user `network`}}",
            "zone": "{{user `zone`}}",
            "image_name": "trial-logstash-{{isotime \"060102-150405\"}}",
            "image_description": "Trial Logstash Image",
            "instance_name": "packer-trial-logstash-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["ssh", "no-ip"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}"
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_trial_logstash.yml",
            "extra_arguments": [
                "-v",
                "--extra-vars", "@packer/envs/trial/params.json"
            ]
        }
    ]
}
