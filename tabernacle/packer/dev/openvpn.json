{
    "builders" : [
        {
            "name": "google",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_ubuntu_image`}}",
            "network": "{{user `network`}}",
            "zone": "{{user `zone`}}",
            "image_name": "base-openvpn-{{isotime \"060102-150405\"}}",
            "image_description": "Base OpenVPN Image",
            "instance_name": "packer-dev--{{uuid}}",
            "machine_type": "n1-standard-1",
            "tags": ["ssh"],
            "use_internal_ip": true,
            "ssh_username" : "{{user `ssh_username`}}"
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_openvpn.yml",
            "extra_arguments": [
                "-v",
                "--extra-vars", "@packer/envs/{{user `project_base`}}/params.json"
            ]
        }
    ]
}
