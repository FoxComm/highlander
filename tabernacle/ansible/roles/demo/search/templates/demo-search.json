{
  "id": "/demo-search",
  "cmd": null,
  "cpus": 1,
  "mem": 1024,
  "disk": 0,
  "instances": 1,
  "portDefinitions": [
    {
      "port": 10008,
      "protocol": "tcp",
      "name": "4041",
      "labels": {}
    }
  ],
  "labels": {
    "LAYER": "backend",
    "LANG": "go"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{docker_registry}}:5000/demo-search:{{docker_tags.demo_search}}",
      "network": "HOST",
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  },
  "env": {
      "API_URL": "http://{{storefront_server_name}}"
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "ps -ef | grep -v grep | grep npm start"
      },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 20,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ]
}
