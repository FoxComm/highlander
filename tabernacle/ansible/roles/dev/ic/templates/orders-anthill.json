{
  "id": "/orders-anthill",
  "cmd": null,
  "cpus": 0.25,
  "mem": 64,
  "disk": 0,
  "instances": 1,
  "labels": {
    "LAYER": "consumer",
    "LANG": "go",
    "TAG": "{{docker_tags.orders_anthill}}"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{docker_registry}}:5000/orders-sphex:{{docker_tags.orders_anthill}}",
      "network": "HOST",
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  },
  "env": {
    "TOPIC": "activities",
    "SCHEMA_REPOSITORY_URL": "http://{{schema_server}}",
    "ZOOKEEPER_URL": "{{zookeeper_server}}",
    "MWH_URL": "http://{{middlewarehouse_server}}",
    "ANTHILL_HOST": "{{anthill}}"
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "ps -ef | grep -v grep | grep orders-anthill"
      },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 30,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ]
}
