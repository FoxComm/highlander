{
  "id": "/digger-sphex-consumer",
  "cmd": null,
  "cpus": 1,
  "mem": 500,
  "disk": 0,
  "instances": 1,
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "labels": {
    "LAYER": "consumer",
    "LANG": "perl6",
    "TAG": "{{docker_tags.digger_sphex}}"
  },
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "{{docker_logs_dir}}",
        "hostPath": "{{docker_logs_host_dir}}",
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "{{docker_registry}}:5000/digger-sphex:{{docker_tags.digger_sphex}}",
      "network": "HOST",
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  },
  "env": {
    "KAFKA": "kafka.service.consul",
    "HENHOUSE": "henhouse.service.consul",
    "TOPIC": "nginx-access"
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "ps -ef | grep -v grep | grep sphex"
      },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 20,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "portDefinitions": [
    {
      "port": 10009,
      "protocol": "tcp",
      "labels": {}
    }
  ]
}
