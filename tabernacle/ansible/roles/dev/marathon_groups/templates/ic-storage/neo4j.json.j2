{
    "id": "neo4j",
    "cmd": null,
    "cpus": 1,
    "mem": 2048,
    "disk": 0,
    "instances": 1,
    "labels": {
        "consul": "neo4j"
    },
    "container": {
        "type": "DOCKER",
        "volumes": [{
                "containerPath": "data",
                "mode": "RW",
                "persistent": {
                    "size": 1048
                }
            },
            {
                "containerPath": "logs",
                "mode": "RW",
                "persistent": {
                    "size": 1048
                }
            },
            {
                "containerPath": "/data",
                "hostPath": "data",
                "mode": "RW"
            },
            {
                "containerPath": "/logs",
                "hostPath": "logs",
                "mode": "RW"
            }
        ],
        "docker": {
            "image": "{{docker_registry}}:5000/neo4j:3.0",
            "network": "HOST",
            "portMappings": null,
            "privileged": false,
            "parameters": [],
            "forcePullImage": true
        }
    },
    "portDefinitions": [{
        "port": 10011,
        "protocol": "tcp",
        "labels": {}
    }],
    "healthChecks": [{
        "gracePeriodSeconds": 300,
        "intervalSeconds": 30,
        "timeoutSeconds": 20,
        "maxConsecutiveFailures": 3,
        "port": 7474,
        "path": "/",
        "protocol": "HTTP",
        "ignoreHttp1xx": false
    }]
}
