FROM ubuntu:16.04

RUN apt-get update --fix-missing
RUN apt-get install -y  \
    libpq-dev \
    postgresql-client-9.5 \
    libgoogle-glog0v5 \ 
    libbotan-1.10-1 \
    libpqxx-4.0

RUN mkdir /isaac
RUN mkdir /certs
ADD run_isaac.sh /isaac/
ADD build/src/isaac/isaac /isaac/
ADD public_key.pem /certs/

WORKDIR /isaac


CMD ["/isaac/run_isaac.sh"]
