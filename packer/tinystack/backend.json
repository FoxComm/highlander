{
    "variables" : {
        "base_jvm_image": "base-jvm-1466553141"
    },
    "builders" : [
        {
            "type": "googlecompute",
            "account_file": "account.json",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_jvm_image`}}",
            "network": "{{user `network`}}",
            "zone": "us-central1-a",
            "image_name": "tinystack-backend-{{timestamp}}",
            "image_description": "Base JVM image used for provisioning",
            "instance_name": "packer-base-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["no-ip", "packer-base"],
            "use_internal_ip": true,
            "ssh_username" : "ubuntu"
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_tinystack_backend.yml",
            "extra_arguments": ["--extra-vars", "@packer/envs/staging_google_oauth.json"]
        }
    ]
}
