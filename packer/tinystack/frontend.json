{
    "variables" : {
        "base_node_image": "base-node-1466553505"
    },
    "builders" : [
        {
            "type": "googlecompute",
            "account_file": "account.json",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_node_image`}}",
            "network": "{{user `network`}}",
            "zone": "us-central1-a",
            "image_name": "tinystack-frontend-{{timestamp}}",
            "image_description": "Base Node.js image used for provisioning",
            "instance_name": "packer-base-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["no-ip", "packer-base"],
            "use_internal_ip": true,
            "ssh_username" : "ubuntu"
        }
    ],
    "provisioners" : [
        {
            "type": "ansible",
            "playbook_file" : "ansible/packer_tinystack_frontend.yml"
        }
    ]
}
