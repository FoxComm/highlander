{
    "variables" : {
        "base_image": "base-1466535643"
    },
    "builders" : [
        {
            "type": "googlecompute",
            "account_file": "account.json",
            "project_id" : "{{user `project_id`}}",
            "source_image": "{{user `base_image`}}",
            "network": "{{user `network`}}",
            "zone": "us-central1-a",
            "image_name": "tinystack-consul-server-{{timestamp}}",
            "image_description": "Base image used for provisioning consul servers",
            "instance_name": "packer-consul-server-{{uuid}}",
            "machine_type": "n1-standard-2",
            "tags": ["no-ip", "packer-tinystack-consul-server"],
            "use_internal_ip": true,
            "ssh_username" : "ubuntu"
        }
    ],
    "provisioners" : [
        {
           "type": "ansible",
           "playbook_file" : "ansible/packer_consul_server.yml",
           "extra_arguments": ["--extra-vars", "consul_expect=1"]
        }
    ]
}
