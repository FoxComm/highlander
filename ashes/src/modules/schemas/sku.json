{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Sku",
  "type": "object",
  "properties": {
    "code": {
      "title": "SKU",
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": [
        "string",
        "null"
      ]
    },
    "upc": {
      "title": "UPC",
      "type": "string"
    },
    "taxClass": {
      "title": "Tax Class",
      "type": "string",
      "widget": "options",
      "fieldsOptions": [
        ["default", "Default"],
        ["other", "Other"]
      ]
    },
    "shippingClass": {
      "title": "Shipping Class",
      "type": "string",
      "widget": "options",
      "fieldsOptions": [
        ["default", "Default"],
        ["other", "Other"]
      ]
    },
    "unitCost": {
      "type": "object",
      "widget": "price",
      "properties": {
        "currency": {
          "type": "string",
          "minLength": 3,
          "maxLength": 3
        },
        "value": {
          "type": "number",
          "minimum": 0,
          "default": 0
        }
      }
    },
    "requiresShipping": {
      "type": "boolean",
      "widget": "booleanOptions",
      "title": "Item requires shipping?"
    },
    "isReturnable": {
      "type": "boolean",
      "widget": "booleanOptions",
      "title": "Item is returnable?"
    },
    "returnWindow": {
      "type": "object",
      "widget": "unitInput",
      "properties": {
        "value": {
          "type": "number",
          "minimum": 0
        },
        "unit": {
          "type": "string",
          "minLength": 1
        }
      },
      "units": ["hours", "days", "months"]
    },
    "weight": {
      "type": "object",
      "widget": "unitInput",
      "properties": {
        "value": {
          "type": "number",
          "minimum": 0
        },
        "unit": {
          "type": "string",
          "minLength": 1
        }
      },
      "units": ["lbs", "kg", "g"]
    },
    "height": {
      "type": "object",
      "widget": "unitInput",
      "properties": {
        "value": {
          "type": "number",
          "minimum": 0
        },
        "unit": {
          "type": "string",
          "minLength": 1
        }
      },
      "units": ["in", "cm"]
    },
    "length": {
      "type": "object",
      "widget": "unitInput",
      "properties": {
        "value": {
          "type": "number",
          "minimum": 0
        },
        "unit": {
          "type": "string",
          "minLength": 1
        }
      },
      "units": ["in", "cm"]
    },
    "width": {
      "type": "object",
      "widget": "unitInput",
      "properties": {
        "value": {
          "type": "number",
          "minimum": 0
        },
        "unit": {
          "type": "string",
          "minLength": 1
        }
      },
      "units": ["in", "cm"]
    },
    "requiresInventoryTracking": {
      "type": "boolean",
      "widget": "booleanOptions",
      "title": "Item requires inventory tracking"
    },
    "inventoryWarningLevel": {
      "type": "object",
      "properties": {
        "isEnabled": {
          "type": "boolean"
        },
        "level": {
          "type": "number"
        }
      }
    },
    "maximumQuantityInCart": {
      "type": "object",
      "properties": {
        "isEnabled": {
          "type": "boolean"
        },
        "level": {
          "type": "number"
        }
      }
    },
    "minimumQuantityInCart": {
      "type": "object",
      "properties": {
        "isEnabled": {
          "type": "boolean"
        },
        "level": {
          "type": "number"
        }
      }
    },
    "allowBackorder": {
      "type": "boolean",
      "widget": "booleanOptions",
      "title": "Allow Backorder"
    },
    "allowPreorder": {
      "type": "boolean",
      "widget": "booleanOptions",
      "title": "Allow Preorder"
    },
    "requiresLotTracking": {
      "type": "boolean",
      "widget": "booleanOptions",
      "title": "Item requires lot tracking"
    },
    "lotExpirationThreshold": {
      "type": "object",
      "widget": "unitInput",
      "properties": {
        "value": {
          "type": "number",
          "minimum": 0
        },
        "unit": {
          "type": "string",
          "minLength": 1
        }
      },
      "units": ["hours", "days", "months"]
    },
    "lotExpirationWarningThreshold": {
      "type": "object",
      "widget": "unitInput",
      "properties": {
        "value": {
          "type": "number",
          "minimum": 0
        },
        "unit": {
          "type": "string",
          "minLength": 1
        }
      },
      "units": ["hours", "days", "months"]
    }
  },
  "required": [
    "code"
  ]
}
