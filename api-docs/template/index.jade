doctype

include ./mixins.jade

html
    head
        meta(charset="utf-8")
        title= self.api.name || 'API Documentation'
        script(src="https://www.gstatic.com/firebasejs/3.9.0/firebase.js")
        script(src="/assets/firebase-init.js")
        script(src="/assets/firebase-check-login.js")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Raleway:300,400,500,600,700|Poppins:100,300,400,500,600,700&subset=latin")
        style!= self.css
        link(rel="stylesheet", href="/assets/foxcomm.css")
    body.preload
        .header
            .container
                .row-flex
                    a(href="/home.html")
                        img(src="/assets/logo-white.png" class="logo-head" style="display:block")

                    
                    ul.main-menu
                      li(class="main-menu--item#{self.api.name == 'Authentication Endpoints' ? ' active' : ''}")
                          a(href="auth.html") Auth
                      li(class="main-menu--item#{self.api.name == 'Storefront' ? ' active' : ''}")
                          a(href="storefront.html") Storefront
                      li(class="main-menu--item#{self.api.name == 'Merchandising Admin' ? ' active' : ''}")
                          a(href="merchandising.html") Merchandising
                      li(class="main-menu--item#{self.api.name == 'Transactions Admin' ? ' active' : ''}")
                          a(href="transactions.html") Transactions
                      li(class="main-menu--item#{self.api.name == 'Inventory Admin' ? ' active' : ''}")
                          a(href="inventory.html") Inventory

        .content
            a.text-muted.back-to-top(href='#top')
                i.fa.fa-toggle-up
                | &nbsp;Back to top
            div(class=self.fullWidth ? 'container-fluid' : 'container')
                .row
                    block nav
                        +Nav(false)

                    .content
                        block content
                            +Content('primary', false)


            .footer
              p
                img(src="/assets/logo-fox-head.png" class="logo-head")
              p Â©&nbsp;
                span(id="copyright_year") 2017
                | &nbsp; FoxCommerce | All rights reserved
              script
                | document.getElementById('copyright_year').innerHTML = new Date().getFullYear()



        script: include scripts.js

        if self.livePreview
            script(src="/socket.io/socket.io.js")
            script.
                var socket = io();
                socket.on('refresh', refresh);
                socket.on('reconnect', function () {
                    socket.emit('request-refresh');
                });
