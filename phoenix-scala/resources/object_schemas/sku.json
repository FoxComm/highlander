{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Sku",
  "type": "object",
  "properties": {
    "attributes": {
      "type": "object",
      "properties": {
        "code": {
          "title": "SKU",
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": [
            "string",
            "null"
          ]
        },
        "upc": {
          "title": "UPC",
          "type": "string"
        },
        "unitCost": {
          "type": "object",
          "widget": "price",
          "properties": {
            "currency": {
              "type": "string",
              "minLength": 3,
              "maxLength": 3
            },
            "value": {
              "type": "number",
              "minimum": 0,
              "default": 0
            }
          }
        },
        "requiresShipping": {
          "type": "options",
          "title": "Item requires shipping?",
          "fieldsOptions": [
            "Yes",
            "No"
          ]
        },
        "shippingClass": {
          "type": "options",
          "title": "Shipping Class",
          "fieldsOptions": [
            "Default"
          ]
        },
        "isReturnable": {
          "type": "options",
          "title": "Item is returnable?",
          "fieldsOptions": [
            "Yes",
            "No"
          ]
        }
      },
      "required": [
        "code"
      ]
    }
  }
}
