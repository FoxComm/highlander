{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Sku",
  "type": "object",
  "properties": {
    "attributes": {
      "type": "object",
      "properties": {
        "code": {
          "title": "SKU",
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": [
            "string",
            "null"
          ]
        },
        "upc": {
          "title": "UPC",
          "type": "string"
        },
        "unitCost": {
          "type": "object",
          "widget": "price",
          "properties": {
            "currency": {
              "type": "string",
              "minLength": 3,
              "maxLength": 3
            },
            "value": {
              "type": "number",
              "minimum": 0,
              "default": 0
            }
          }
        },
        "requiresShipping": {
          "type": "boolean",
          "widget": "booleanOptions",
          "title": "Item requires shipping?"
        },
        "isReturnable": {
          "type": "boolean",
          "widget": "booleanOptions",
          "title": "Item is returnable?"
        },
        "returnWindow": {
          "type": "object",
          "widget": "unitInput",
          "properties": {
            "value": {
              "type": "number",
              "minimum": 0,
              "default": 0
            },
            "unit": {
              "type": "string",
              "minLength": 1
            }
          },
          "units": ["hours", "days", "months"]
        },
        "weight": {
          "type": "object",
          "widget": "unitInput",
          "properties": {
            "value": {
              "type": "number",
              "minimum": 0,
              "default": 0
            },
            "unit": {
              "type": "string",
              "minLength": 1
            }
          },
          "units": ["Lbs", "kg"]
        },
        "height": {
          "type": "object",
          "widget": "unitInput",
          "properties": {
            "value": {
              "type": "number",
              "minimum": 0,
              "default": 0
            },
            "unit": {
              "type": "string",
              "minLength": 1
            }
          },
          "units": ["In", "Cm"]
        },
        "length": {
          "type": "object",
          "widget": "unitInput",
          "properties": {
            "value": {
              "type": "number",
              "minimum": 0,
              "default": 0
            },
            "unit": {
              "type": "string",
              "minLength": 1
            }
          },
          "units": ["In", "Cm"]
        },
        "width": {
          "type": "object",
          "widget": "unitInput",
          "properties": {
            "value": {
              "type": "number",
              "minimum": 0,
              "default": 0
            },
            "unit": {
              "type": "string",
              "minLength": 1
            }
          },
          "units": ["In", "Cm"]
        }
      },
      "required": [
        "code"
      ]
    }
  }
}
