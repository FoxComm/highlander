{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Coupon",
  "type": "object",
  "properties": {
    "attributes": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "storefrontName": {
          "type": "string",
          "widget": "richText",
          "minLength": 1
        },
        "details": {
          "type": "string",
          "widget": "richText"
        },
        "description": {
          "type": "string",
          "widget": "text"
        },
        "usageRules": {
          "type": "object",
          "properties": {
            "isExclusive": {"type": "boolean"},
            "isUnlimitedPerCode": {"type": "boolean"},
            "usesPerCode": {"type": "integer"},
            "usesPerCustomer": {"type": "integer"},
            "isUnlimitedPerCustomer": {"type": "boolean"}
          }
        },
        "activeFrom": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "activeTo": {
          "type": ["string", "null"],
          "format": "date-time"
        }
      },
      "required": ["name", "storefrontName"]
    }
  }
}
