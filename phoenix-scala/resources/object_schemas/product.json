{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Product",
  "type": "object",
  "properties": {
    "attributes": {
      "type": "object",
      "description": "Product attributes itself",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "widget": "richText"
        },
        "url": {
          "type": ["string", "null"]
        },
        "metaTitle": {
          "type": ["string", "null"]
        },
        "metaDescription": {
          "type": ["string", "null"]
        },
        "activeFrom": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "activeTo": {
          "type": ["string", "null"],
          "format": "date-time"
        }
      },
      "required": ["title"]
    },
    "skus": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/product-variant"
      },
      "minItems": 1
    }
  }
}
