{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Taxonomy",
  "type": "object",
  "properties": {
    "attributes": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "activeTo": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "activeFrom": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "description": {
          "type": "string",
          "widget": "richText"
        }
      },
      "required": ["name"],
      "description": "Taxonomy attributes itself"
    },
    "hierarchical": {
      "type": "boolean"
    }
  }
}
