{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Discount",
  "type": "object",
  "properties": {
    "id": {
      "type": "number"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "offer": {
          "type": "object"
        },
        "title": {
          "type": "string"
        },
        "qualifier": {
          "type": "object"
        },
        "description": {
          "type": "string",
          "widget": "richText"
        }
      }
    }
  }
}
