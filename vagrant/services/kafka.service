[Service]
WorkingDirectory=/vagrant
ExecStart=/bin/bash vagrant/run_kafka.sh /home/vagrant/build/kafka
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=kafka
TimeoutStartSec=5s
RestartSec=10s

[Install]
WantedBy=multi-user.target

[Unit]
Requires=bottledwater.service
After=bottledwater.service
