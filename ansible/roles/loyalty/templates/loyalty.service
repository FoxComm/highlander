[Service]
WorkingDirectory=/usr/share
ExecStart=/usr/bin/java -Dzookeeper={{zookeeper_server}} -Dschema-registry=http://{{schema_server}} -Dphoenix-uri=http://{{phoenix_server}}/{{phoenix_api_version}} -jar {{loyalty_jar}}
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=loyalty
TimeoutStartSec=3m
RestartSec=10

[Install]
WantedBy=multi-user.target

[Unit]
Requires=kafka.service phoenix.service
After=kafka.service phoenix.service
