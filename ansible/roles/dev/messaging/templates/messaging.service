[Service]
WorkingDirectory=/usr/share
ExecStart=/usr/bin/java -Dmandrill-key={{mandrill_key}} -Dkafka-broker={{kafka_server}} -Dretailer-name={{retailer_name}} -Dadd-new-customers-to-mailchimp={{add_new_customers_to_mailchimp}} -Dmailchimp-customers-list-id={{mailchimp_customers_list_id}} -Dmailchimp-api-key={{mailchimp_api_key}} -Dschema-registry-url=http://{{schema_server}} -Dadmin-server-name={{ashes_server_name}} -Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port={{messaging_jmx_port}} -Dcom.sun.management.jmxremote.local.only=false -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false -jar {{messaging_jar}}
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=messaging
TimeoutStartSec=3m
RestartSec=10

[Install]
WantedBy=multi-user.target

[Unit]
Requires=kafka.service
After=kafka.service
