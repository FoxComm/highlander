[Service]
WorkingDirectory=/usr/share
ExecStart=/usr/bin/java -Dmandrill-key={{mandrill_key}} -Dkafka-broker={{kafka_server}} -Dretailer-name={{retailer_name}} -Dadd-new-customers-to-mailchimp={{add-new-customers-to-mailchimp}} -Dmailchimp-customers-list-id={{mailchimp-customers-list-id}} -Dmailchimp-api-key={{mailchimp-api-key}} -Dschema-registry-url=http://{{schema_server}} -Dadmin-server-name={{ashes_server_name}} -Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port={{messaging_jmx_port}} -Dcom.sun.management.jmxremote.local.only=false -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false -jar {{messaging_jar}}
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=messaging
TimeoutStartSec=3m
RestartSec=10

[Install]
WantedBy=multi-user.target

[Unit]
Requires=kafka.service
After=kafka.service
